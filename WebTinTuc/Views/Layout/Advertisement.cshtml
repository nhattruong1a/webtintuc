@model IEnumerable<WebTinTuc.Models.Advertisement>

@foreach (var item in Model)
{
    <div class="single-blog-post style-2">
        <div class="post-thumb">
            <a href="@item.Link"><img src="~/Img_Adv/@item.Image" alt=""></a>
        </div>
        <div class="post-data">
            <a href="@item.Link" class="post-title" style="text-decoration:none;color:black">
                <h6>@item.Title</h6>
            </a>
        </div>
    </div>
}
