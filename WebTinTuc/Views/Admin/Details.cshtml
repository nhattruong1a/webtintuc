@model WebTinTuc.Models.New

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <h2>Chi tiết bài đăng</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tiêu đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Tiêu đề phụ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sub_Title)
        </dd>

        <dt>
            Nội dung:
        </dt>

        <dd style="text-align:justify">
            @Html.DisplayFor(model=>model.Content)
        </dd>

        <dt>
            Ảnh:
        </dt>

        <dd>
            <img src="@Url.Content("~/Img_News"+ Model.image)" width="120px"/>
        </dd>

        <dt>
           Chủ đề:
        </dt>

        <dd>
            @Html.DisplayFor(model=>model.category.Name)
        </dd>

        <dt>
           Ngày đăng:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}",Model.DateSubmitted)
        </dd>

        <dt>
            Tác giả:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
